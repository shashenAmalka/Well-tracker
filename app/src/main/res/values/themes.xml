<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with modern design -->
    <style name="Base.Theme.WellTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/text_white</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary_green</item>
        <item name="colorSecondaryVariant">@color/secondary_green_dark</item>
        <item name="colorOnSecondary">@color/text_white</item>
        
        <!-- Surface Colors -->
        <item name="colorSurface">@color/surface_card</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:colorBackground">@color/surface_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/text_white</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/primary_blue</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.WellTracker" parent="Base.Theme.WellTracker" />
    
    <!-- Custom Text Styles -->
    <style name="TextAppearance.WellTracker.Headline1" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.WellTracker.Headline2" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.WellTracker.Headline3" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.WellTracker.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.WellTracker.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>    <!-- Custom Card Style -->
    <style name="CardView.WellTracker" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface_card</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    
    <!-- Custom Button Styles -->
    <style name="Button.WellTracker.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Button.WellTracker.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/secondary_green</item>
        <item name="android:textColor">@color/secondary_green</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Frosted Glass Styles -->
    <style name="FrostedGlass.Container" parent="">
        <item name="android:background">@drawable/bg_frosted_glass</item>
        <item name="android:elevation">8dp</item>
        <item name="android:alpha">0.95</item>
    </style>
    
    <style name="FrostedGlass.Card" parent="CardView.WellTracker">
        <item name="android:background">@drawable/bg_frosted_glass_card</item>
        <item name="cardElevation">6dp</item>
        <item name="android:alpha">0.92</item>
    </style>
    
    <style name="FrostedGlass.Dialog" parent="">
        <item name="android:background">@drawable/bg_frosted_glass_dialog</item>
        <item name="android:elevation">12dp</item>
        <item name="android:alpha">0.98</item>
    </style>
    
    <style name="FrostedGlass.Overlay" parent="">
        <item name="android:background">@drawable/bg_frosted_glass_dark</item>
        <item name="android:elevation">4dp</item>
        <item name="android:alpha">0.85</item>
    </style>
</resources>