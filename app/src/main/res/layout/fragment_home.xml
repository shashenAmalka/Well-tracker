                                android:textSize="18sp"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />

                            <!-- Best Mood Badge -->
                            <LinearLayout
                                android:id="@+id/best_mood_badge_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:background="@drawable/bg_best_mood_badge"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="6dp"
                                android:paddingBottom="6dp"
                                android:elevation="2dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ‘‘"
                                    android:textSize="16sp"
                                    android:layout_marginEnd="4dp"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/tv_best_day_home"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sunday"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="#D4AF37"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Chart Container with Rounded Background -->
                        <FrameLayout
                            android:id="@+id/mood_chart_container_home"
                            android:layout_width="0dp"
                            android:layout_height="220dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/bg_mood_chart_rounded"
                            android:padding="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/chart_header_home">

                            <!-- Bar Chart with trend line -->
                            <com.github.mikephil.charting.charts.CombinedChart
                                android:id="@+id/mood_bar_chart_home"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                tools:visibility="visible" />

                            <!-- Placeholder for empty state -->
                            <LinearLayout
                                android:id="@+id/chart_placeholder_home"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
