            </FrameLayout>

            <!-- Feature Cards Grid with Blur -->
            <FrameLayout
                android:id="@+id/blur_feature_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#50FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#20FFFFFF"
                    android:padding="12dp">

                    <!-- First Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <!-- Habits Card with Frosted Glass -->
                        <FrameLayout
                            android:id="@+id/blur_habits_card"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:background="#50FFFFFF">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_habits"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                style="@style/FrostedGlass.Card"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="6dp"
                                app:cardBackgroundColor="#60F3E5F5"
                                android:alpha="0.92">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:padding="16dp">

                                    <ImageView
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:src="@drawable/ic_habit"
