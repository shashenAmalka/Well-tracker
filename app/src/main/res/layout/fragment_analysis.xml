<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habit Analysis"
                    android:textAppearance="@style/TextAppearance.WellTracker.Headline1"
                    android:textColor="@color/text_primary"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How your habits influence your mood"
                    android:textAppearance="@style/TextAppearance.WellTracker.Body2"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp"
                    />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/accent_peach">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_analytics"
                    app:tint="@color/text_white" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Time Period Selector -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface_card"
            app:strokeColor="@color/primary_blue_light"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analysis Period"
                    android:textAppearance="@style/TextAppearance.WellTracker.Body1"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_7_days"
                        style="@style/Button.WellTracker.Secondary"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="7 Days"
                        android:textSize="14sp"
                        app:cornerRadius="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_30_days"
                        style="@style/Button.WellTracker.Primary"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="30 Days"
                        android:textSize="14sp"
                        app:cornerRadius="12dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Chart Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/surface_card"
            app:strokeColor="@color/secondary_green_light"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tv_chart_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How Your Habits Influenced Your Mood This Week"
                    android:textAppearance="@style/TextAppearance.WellTracker.Headline2"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"
                    />

                <TextView
                    android:id="@+id/tv_chart_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average mood score when habits were completed"
                    android:textAppearance="@style/TextAppearance.WellTracker.Body2"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="20dp"
                    />

                <!-- Chart Container -->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/bar_chart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="16dp" />

                <!-- Legend -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/surface_secondary"
                    android:padding="12dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="16dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@color/secondary_green"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="High Impact (4-5)"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="16dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@color/primary_blue"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medium Impact (3-4)"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@color/accent_peach"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Low Impact (1-3)"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Insights Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/primary_blue_light"
            app:strokeColor="@color/primary_blue"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Key Insights"
                        android:textAppearance="@style/TextAppearance.WellTracker.Headline2"
                        android:textColor="@color/primary_blue_dark"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_top_habit_insight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Morning meditation has the highest positive impact on your mood (avg. 4.2/5)"
                    android:textAppearance="@style/TextAppearance.WellTracker.Body1"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"
                    />

                <TextView
                    android:id="@+id/tv_recommendation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Consider doing your top mood-boosting habits earlier in the day"
                    android:textAppearance="@style/TextAppearance.WellTracker.Body1"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"
                    />

                <TextView
                    android:id="@+id/tv_consistency_insight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ You completed 75% of your habits this period"
                    android:textAppearance="@style/TextAppearance.WellTracker.Body1"
                    android:textColor="@color/text_primary"
                    />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Empty State (hidden by default) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/empty_state_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š"
                    android:textSize="48sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Enough Data Yet"
                    android:textAppearance="@style/TextAppearance.WellTracker.Headline2"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complete some habits and log your mood to see insights here!"
                    android:textAppearance="@style/TextAppearance.WellTracker.Body2"
                    android:textColor="@color/text_secondary"
                    android:textAlignment="center"
                    />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
