<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface_card"
    app:strokeColor="@color/accent_purple_light"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/surface_card">

        <!-- Mood Emoji with enhanced background -->
        <androidx.cardview.widget.CardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/accent_purple_light">

            <TextView
                android:id="@+id/tv_mood_emoji"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ðŸ˜Š"
                android:textSize="28sp"
                android:gravity="center"
                />

        </androidx.cardview.widget.CardView>

        <!-- Mood Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mood_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning workout felt great!"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/tv_mood_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="May 10, 2023, 09:15 AM"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"
                />

        </LinearLayout>

        <!-- Delete Button with enhanced styling -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/iv_delete_mood"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_delete"
            app:iconSize="20dp"
            app:iconTint="@color/text_secondary"
            app:backgroundTint="@color/surface_secondary"
            app:cornerRadius="20dp"
            android:contentDescription="Delete mood entry"
            />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
