<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Dialog frosted glass -->
    <gradient
        android:startColor="#45FFFFFF"
        android:centerColor="#40FFFFFF"
        android:endColor="#35FFFFFF"
        android:angle="45" />
    
    <!-- Dialog corners -->
    <corners android:radius="24dp" />
    
    <!-- Prominent border for dialogs -->
    <stroke
        android:width="1.5dp"
        android:color="#50FFFFFF" />
        
</shape>